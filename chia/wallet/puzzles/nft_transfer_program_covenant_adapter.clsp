(mod
  (
    COVENANT_LAYER
    Current_Owner  ; Truth
    conditions  ; Truth
    (
      lineage_proof
      morpher_solution
      inner_solution
    )
  )

  (defun fix_condition ((parent_assertion . (new_owner new_tp conditions)))
    (list new_owner new_tp (c parent_assertion conditions))
  )

  (fix_condition (a
    COVENANT_LAYER
    (list
      lineage_proof
      morpher_solution
      (list Current_Owner conditions inner_solution)
    )
  ))
)